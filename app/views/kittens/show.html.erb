<h1><%= @kitten.name %></h1>

<p>Age: <%= @kitten.age %></p>
<p>Cuteness: <%= @kitten.cuteness %></p>
<p>Softness: <%= @kitten.softness %></p>

<ul>
	<li><%= link_to "Edit", edit_kitten_path(@kitten) %></li>
	<li><%= link_to "Delete", kitten_path(@kitten.id), data: {
															turbo_method: :delete,
															turbo_confirm: "Are you sure?"
														} %></li>
</ul>